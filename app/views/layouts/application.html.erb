      <div class="row-fluid">
        <div class="span12">
          <div id='header'>
            <div class='left logo'>
              <a id='logo' href='http://www.mindvalley.com'><span id='ask'>ASK@</span><img src='/assets/logo-mindvalley.png' /></a>
            </div>
          </div>
        </div>
      </div>
    </div> -->
    <!-- Explorer canvas, for IE6-8 support of canvas elements -->
    <!--[if lt IE 9]>
        <script src="js/excanvas.min.js"></script>
    <![endif]-->
    <footer>
      <%#= render "layouts/footer" %>
    </footer>
  </body>
</html>

