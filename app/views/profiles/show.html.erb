<div class="row">
  <div class="span6 offset3">
    <ul class="thumbnails">
      <% @profiles.each do |profile| %>
        <li class="thumbnail">
          <%= link_to_unless_current(image_tag(profile.avatar_url, width: 60, height: 82), profile_path(profile)) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="span8">
    <%= form_for([@profile, @profile.questions.new], remote: true) do |f| %>
      <div>
        <%= f.text_area :body, rows: 20, :class => "question body", placeholder: "Hey #{@profile.name}, I'd like to know ..." %>
      </div>
      <p>
        <%= link_to "<i class='icon-comment icon-white'></i> Ask #{@profile.name}".html_safe, '#', :class => 'btn btn-primary submit question' %>
      </p>
    <% end %>
  </div>
  <div class="span4">
    <div class="well">
      <%= image_tag(@profile.avatar_url, :class => "thumbnail mugshot", width: 80 )%>
      <h3><%= @profile.name %></h3>
      <p class="description"><%= @profile.description %></p>
    </div>
  </div>
</div>